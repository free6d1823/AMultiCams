<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainFragment">
    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/control_bar"
        android:layout_alignParentBottom="true"
        android:columnCount="4"
        android:rowCount="3"
        android:layout_gravity="top|end">

    </GridLayout>

    <RelativeLayout
        android:id="@+id/control_bar"
        android:layout_width="wrap_content"
        android:layout_height="96dp"
        android:layout_marginBottom="0dp"
        android:layout_gravity="bottom|end"
>

        <ImageButton
            android:id="@+id/videoOnlineImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="36dp"
            android:background="@null"
            android:src="@mipmap/btn_video_online" />

        <ImageButton
            android:id="@+id/settingsImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/videoOnlineImageButton"
            android:layout_alignParentStart="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="0dp"
            android:background="@null"

            android:src="@mipmap/btn_settings" />

        <ImageButton
            android:id="@+id/snapshotImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/settingsImageButton"
            android:layout_alignTop="@+id/videoOnlineImageButton"
            android:layout_marginStart="94dp"
            android:layout_marginTop="0dp"

            android:background="@null"
            android:src="@mipmap/btn_camera"
            android:visibility="visible" />
    </RelativeLayout>


</FrameLayout>